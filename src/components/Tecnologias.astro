---
/* src/components/Tecnologias.astro */
---
<section class="tech-section">
  <h3>Tecnologías y Herramientas</h3>
  <div class="tech-container">
    
    <div class="tech-badge">
      <img src="/python.png" alt="Python" class="tech-icon" />
      <span>Python</span>
    </div>

    <div class="tech-badge">
      <img src="/django.png" alt="Django" class="tech-icon" />
      <span>Django</span>
    </div>

    <div class="tech-badge">
      <img src="/java.png" alt="Java" class="tech-icon" />
      <span>Java</span>
    </div>

    <div class="tech-badge">
      <img src="/springboot.png" alt="Springboot" class="tech-icon" />
      <span>Springboot</span>
    </div>

    <div class="tech-badge">
      <img src="/jwt.png" alt="JWT" class="tech-icon" />
      <span>JWT</span>
    </div>

    <div class="tech-badge">
      <img src="/astro.png" alt="Astro" class="tech-icon" />
      <span>Astro</span>
    </div>

    <div class="tech-badge">
      <img src="/git.png" alt="Git" class="tech-icon" />
      <span>Git</span>
    </div>

  </div>
</section>

<style>
  .tech-section {
    padding: 4rem 0;
  }

  h3 {
    text-align: center;
    font-size: 1.8rem;
    color: var(--primary-purple);
    margin-bottom: 2rem;
  }

  .tech-container { 
    display: flex; 
    flex-wrap: wrap; 
    gap: 1rem; 
    justify-content: center; 
    max-width: 900px;
    margin: 0 auto;
  }

  .tech-badge { 
    display: flex;
    align-items: center;
    gap: 0.6rem;
    background: var(--bg-card); 
    border: 1px solid var(--border-color); 
    padding: 0.5rem 1rem; 
    border-radius: 50px; 
    font-weight: 600; 
    transition: all 0.3s ease;
    color: var(--text-white);
    white-space: nowrap; /* Evita que el texto se parta en dos líneas */
  }

  .tech-icon {
    /* Tamaño fijo del icono */
    width: 20px !important;
    height: 20px !important;
    /* Evita que la imagen crezca o se encoja */
    flex-shrink: 0;
    object-fit: contain;
    display: block;
  }

  .tech-badge:hover { 
    border-color: var(--primary-purple); 
    transform: translateY(-3px); 
    box-shadow: 0 5px 15px rgba(124, 58, 237, 0.2); 
    background: rgba(124, 58, 237, 0.05);
  }

  /* Ajuste para móviles muy pequeños */
  @media (max-width: 480px) {
    .tech-badge {
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
    }
    .tech-icon {
      width: 18px !important;
      height: 18px !important;
    }
  }
</style>