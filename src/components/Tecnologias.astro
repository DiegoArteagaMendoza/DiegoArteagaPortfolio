---
/* src/components/Tecnologias.astro */

// Definimos la lista de tecnologías aquí para facilitar cambios futuros
const tecnologias = [
  { nombre: "Python", icon: "/python.png" },
  { nombre: "Django", icon: "/django.png" },
  { nombre: "Java", icon: "/java.png" },
  { nombre: "Springboot", icon: "/springboot.png" },
  { nombre: "JWT", icon: "/jwt.png" },
  { nombre: "Astro", icon: "/astro.png" },
  { nombre: "Git", icon: "/git.png" }
];
---

<section class="tech-section">
  <h3>Tecnologías y Herramientas</h3>
  
  <div class="tech-container">
    {tecnologias.map((tech) => (
      <div class="tech-badge">
        <img src={tech.icon} alt={tech.nombre} class="tech-icon" />
        <span>{tech.nombre}</span>
      </div>
    ))}
  </div>
</section>

<style>
  .tech-section {
    padding: 4rem 0;
  }

  h3 {
    text-align: center;
    font-size: 1.8rem;
    color: var(--primary-purple);
    margin-bottom: 2rem;
  }

  .tech-container { 
    display: flex; 
    flex-wrap: wrap; 
    gap: 1rem; 
    justify-content: center; 
    max-width: 900px;
    margin: 0 auto;
  }

  .tech-badge { 
    display: flex;
    align-items: center;
    gap: 0.6rem;
    background: var(--bg-card); 
    border: 1px solid var(--border-color); 
    padding: 0.5rem 1rem; 
    border-radius: 50px; 
    font-weight: 600; 
    transition: all 0.3s ease;
    color: var(--text-white);
    white-space: nowrap;
  }

  .tech-icon {
    width: 20px !important;
    height: 20px !important;
    flex-shrink: 0;
    object-fit: contain;
    display: block;
  }

  .tech-badge:hover { 
    border-color: var(--primary-purple); 
    transform: translateY(-3px); 
    box-shadow: 0 5px 15px rgba(124, 58, 237, 0.2); 
    background: rgba(124, 58, 237, 0.05);
  }

  @media (max-width: 480px) {
    .tech-badge {
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
    }
    .tech-icon {
      width: 18px !important;
      height: 18px !important;
    }
  }
</style>