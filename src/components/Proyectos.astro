---
/* src/components/Proyectos.astro */
const proyectos = [
  {
    titulo: "Sistema de Gestión Veterinaria",
    descripcion: "Aplicación web que permite la gestión de establecimientos veterinarios, tanto para personas independientes como para lugares establecidos.",
    estado: "Próximamente",
    tecnologias: ["Python", "Django", "PostgreSQL", "Tailwind"],
    github: "#" // Agrega aquí el link de tu repositorio cuando esté listo
  },
];
---

<section id="proyectos" class="proyectos-section">
  <div class="header-container">
    <span class="section-subtitle">Portafolio</span>
    <h3 class="section-title">Mis Proyectos</h3>
  </div>

  <div class="proyectos-grid">
    {proyectos.map((proyecto) => (
      <div class="proyecto-card">
        <div class="card-content">
          <div class={`status-badge ${proyecto.estado === 'Próximamente' ? 'status-purple' : 'status-white'}`}>
            {proyecto.estado}
          </div>
          
          <div class="title-wrapper">
            <h4>{proyecto.titulo}</h4>
            {proyecto.github && (
              <a href={proyecto.github} target="_blank" rel="noopener noreferrer" class="github-link" title="Ver en GitHub">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg>
              </a>
            )}
          </div>

          <p>{proyecto.descripcion}</p>
          
          <div class="card-footer">
            {proyecto.tecnologias.map((tech) => (
              <span class="tech-tag">{tech}</span>
            ))}
          </div>
        </div>
        <div class="card-glow"></div>
      </div>
    ))}
  </div>
</section>

<style>
  .proyectos-section {
    padding: 5rem 0;
  }

  .header-container {
    margin-bottom: 3rem;
    text-align: left;
  }

  .section-subtitle {
    color: var(--primary-purple);
    font-weight: bold;
    font-size: 0.9rem;
    text-transform: uppercase;
    display: block;
    margin-bottom: 0.5rem;
  }

  .section-title {
    font-size: 2.5rem;
    color: white;
    margin: 0;
  }

  .proyectos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .proyecto-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 2rem;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, border-color 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .proyecto-card:hover {
    transform: translateY(-10px);
    border-color: var(--primary-purple);
  }

  .card-content {
    position: relative;
    z-index: 1;
  }

  .status-badge {
    display: inline-block;
    padding: 0.2rem 0.8rem;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    border: 1px solid transparent;
  }

  .status-purple {
    background: rgba(124, 58, 237, 0.1);
    color: var(--primary-purple);
    border-color: var(--primary-purple);
  }

  .status-white {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    border-color: #ffffff;
  }

  .title-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  h4 {
    color: white;
    font-size: 1.4rem;
    margin: 0;
  }

  .github-link {
    color: var(--text-gray);
    transition: 0.3s;
  }

  .github-link:hover {
    color: var(--primary-purple);
    transform: scale(1.1);
  }

  p {
    color: var(--text-gray);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .card-footer {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    font-size: 0.7rem;
    color: #fff;
    background: #27272a;
    padding: 0.3rem 0.6rem;
    border-radius: 4px;
    border: 1px solid transparent;
    transition: 0.3s;
  }

  .proyecto-card:hover .tech-tag {
    border-color: rgba(124, 58, 237, 0.3);
  }

  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, rgba(124, 58, 237, 0.15), transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .proyecto-card:hover .card-glow {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .section-title { font-size: 2rem; }
  }
</style>